{
    "name": "master-css-language-service",
    "description": "Master CSS language service and code highlight for Visual Studio Code",
    "displayName": "Master CSS Language Service",
    "version": "0.0.55",
    "author": "Aoyue Design LLC.",
    "funding": "https://docs.master.co/css/donate",
    "homepage": "https://css.master.co",
    "private": false,
    "license": "MIT",
    "publisher": "masterco",
    "icon": "images/icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/master-co/css-language-service.git"
    },
    "engines": {
        "vscode": "^1.63.0"
    },
    "activationEvents": [
        "onLanguage:html",
        "onLanguage:php",
        "onLanguage:javascriptreact",
        "onLanguage:typescriptreact",
        "onLanguage:vue",
        "onLanguage:svelte",
        "onLanguage:rust"
    ],
    "main": "./client/out/extension",
    "contributes": {
        "grammars": [
            {
                "scopeName": "source.master-css",
                "path": "./syntaxes/master-css.tmLanguage.json",
                "injectTo": [
                    "source.php",
                    "text.html.php",
                    "text.html",
                    "source.js.jsx",
                    "source.ts.tsx",
                    "source.jsx",
                    "source.tsx",
                    "source.ts",
                    "source.js",
                    "source.rust",
                    "source.svelte"
                ]
            }
        ]
    },
    "scripts": {
        "vscode:publish": "vsce publish",
        "vscode:prepublish": "npm run build",
        "build": "tsc -b",
        "watch": "tsc -b -w",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
    },
    "devDependencies": {
        "@types/mocha": "^9.1.0",
        "@types/node": "^14.17.0",
        "@typescript-eslint/eslint-plugin": "^5.13.0",
        "@typescript-eslint/parser": "^5.13.0",
        "eslint": "^8.10.0",
        "mocha": "^9.2.1",
        "typescript": "^4.6.2"
    }
}
